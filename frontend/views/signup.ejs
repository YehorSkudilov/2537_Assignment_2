<div class="center-container bg-dark text-white text-center">
    <h1 class="display-4 mb-4">Sign Up</h1>
    <div class="w-100" style="max-width: 400px;">
      <input id="name" type="text" placeholder="Name" name="name" class="form-control form-control-lg mb-3">
      <input id="email" type="email" placeholder="Email" name="email" class="form-control form-control-lg mb-3">
      <input id="password" type="password" placeholder="Password" name="password" minlength="1" class="form-control form-control-lg mb-4">
      <button id="signup" type="button" class="btn btn-primary btn-lg w-100">Sign Up</button>
    </div>
</div>